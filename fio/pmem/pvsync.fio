[global]
thread
group_reporting
#norandommap
overwrite=1
thinktime=0
sync=0
direct=1

ioengine=pvsync
filename=/PMEM/testdata
size=20GB
#offset_increment=50G  # each of 'numjobs' will get its own space within the device

time_based
runtime=120
ramp_time=60

[SeqR]
bs=4k
numjobs=1  # depending on CPU core count more can be better, but also can be a bottleneck
iodepth=1

rw=randread
#rw=randrw
#rwmixread=100
#percentage_random=0
